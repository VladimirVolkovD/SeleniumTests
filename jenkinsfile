

pipeline {
    agent any

 parameters {
        string(name: 'testName', defaultValue: '', description: 'Specify the test name')
    }

    
    stages {
        stage('Restore Packages') {
            steps {
                bat 'dotnet restore'
            }
        }

        stage('Build') {
            steps {
                bat 'dotnet build --configuration Debug'
            }
        }

        stage('Test') {
            steps {
                bat 'dotnet test  --filter Name=${testName}'
            }
            post {
                always {
                    allure includeProperties: false, jdk: '', results: [[path: 'SeleniumTests\\bin\\Debug\\net7.0\\allure-results']]
                }
            }
        }
    }
}

